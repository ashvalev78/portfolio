extends ../template

include ../common/mixins

block content
  section.welcome__section
    .welcome__bg(id = 'parallax-section')
      .parallax__layer
        img.parallax__image(src="assets/images/im/Layer 9.png")
      .parallax__layer
        img.parallax__image(src="assets/images/im/Layer 8.png")
      .parallax__layer
        img.parallax__image(src="assets/images/im/Layer 7.png")
      .parallax__layer
        img.parallax__image(src="assets/images/im/Layer 6.png")
      .parallax__layer
        img.parallax__image(src="assets/images/im/Layer 4.png")
      .parallax__layer
        img.parallax__image(src="assets/images/im/Layer 2.png")
      .parallax__layer
        img.parallax__image(src="assets/images/im/Layer 1.png")
    a.hero__auth(href="") Авторизация
    .hero__description
      .hero__flipper.back__flipper
        .hero__presentation
          .hero__img
            img.avatar(src = "assets/images/im/avatar.jpg")
          .hero__descr
            .hero__name.welcome Александр Швалев
            .hero__text.welcome Личный сайт веб разработчика
          ul.socials.description__socials
            each item in ['vk', 'github', 'in']
              li.socials__item
                a(href="" class = 'href__socials')
                  +icon(`${item}`, "green_mod")
          .hero__menu
            ul.menu
              li.menu__item
                a.menu__item-href(href="./my-works.html") Мои работы
              li.menu__item 
                a.menu__item-href(href="./about.html") Обо мне
              li.menu__item 
                a.menu__item-href(href="./blog.html") Блог
        .hero__authorization
          .hero__authorization-form
            h2.auth__title Авторизация
            .auth__inputs
              li.auth__input
                .auth__input-img
                  +icon('login', 'login_mod')
                input.auth__input-input( placeholder="Логин" name ="log")
              li.auth__input
                .auth__input-img
                  +icon('password', 'login_mod')
                input.auth__input-input( placeholder="Пароль" name="pass")
            .auth__checks
              .human__box
                input.checkbox__elem(type="checkbox" name='robot check')
                .checkbox__elem-fake
                .checkbox__descr Я человек
              h2.auth__checks-check Вы точно не робот?
              .auth__checks__second
                .auth__checks__second-block
                  input.auth__checks__second-check(type="radio" name='robot')
                  .auth__checks__second-check-fake
                  .check__text Да
                .auth__checks__second-block.second-block
                  input.auth__checks__second-check(type="radio" name='robot')
                  .auth__checks__second-check-fake
                  .check__text Не уверен
            ul.back__menu
              li.back__item
                a.back__buttons.auth__back(href="") На главную
              li.back__item
                a.back__buttons(href="") Войти
            

