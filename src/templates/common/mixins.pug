mixin icon(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + " " + mod)
		use(xlink:href="assets/images/icons/sprite.svg#" + name)
      
mixin skill(name,percent)
	svg.circles(viewBox="0 0 110 110")
		circle( r="45" cx="50%" cy="50%" fill="none" class="circle__first")
		circle( r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)" class="circle__second circle-" + percent)
	span( class="item__title") #{name}
